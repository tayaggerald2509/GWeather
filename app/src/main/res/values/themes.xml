<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.GWeather" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>

        <item name="android:fontFamily">@font/product_sans_regular</item>
        
<!--        <item name="android:windowSplashScreenBackground">@color/dark_purple</item>-->
        <!-- Customize your theme here. -->
    </style>


    <style name="Theme.GWeather.NoActionBar" parent="Theme.GWeather">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="CustomEditTextStyle" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <!-- Customize text color, hint color, background, etc. -->
        <item name="android:textColor">#000000</item>
        <item name="android:textColorHint">#888888</item>

        <item name="errorTextColor">@android:color/white</item>

        <!-- Add other attributes as needed -->
    </style>

    <style name="CustomButtonStyle" parent="Widget.AppCompat.Button">
        <!-- Customize text color, hint color, background, etc. -->
        <item name="android:textColor">@color/dark_purple</item>
        <item name="android:background">@drawable/background_button</item>
        <item name="android:paddingStart">24dp</item>
        <item name="android:paddingEnd">24dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:textSize">24sp</item>
        <!-- Add other attributes as needed -->
    </style>


    <style name="error_appearance" parent="@android:style/TextAppearance">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">12sp</item>
    </style>

</resources>